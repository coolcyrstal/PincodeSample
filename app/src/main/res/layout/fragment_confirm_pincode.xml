<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FCA61B"
    tools:context=".ConfirmPINCode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_confirmPINcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:text="Confirm PIN code"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_lock"
            android:id="@+id/ic_lock_confirmPINCode"
            android:layout_below="@+id/text_confirmPINcode"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ic_lock_confirmPINCode"
            android:background="@color/colorWhite"
            android:layout_marginTop="80dp">
        </FrameLayout>

        <in.arjsna.passcodeview.PassCodeView
            android:id="@+id/confirm_pin_code_passcodeview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ic_lock_confirmPINCode"
            android:padding="25.0dp"
            app:digit_size="30.0dp"
            app:digits="6"
            app:empty_drawable="@drawable/empty_dot_line"
            app:filled_drawable="@drawable/fill_dot_line"
            app:key_text_size="30.0sp"
            app:divider_visible="false"/>
    </RelativeLayout>
</FrameLayout>